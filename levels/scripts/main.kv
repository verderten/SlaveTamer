#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MainMenuScreen>:
    transition: FadeTransition()
    MenuScreen:
        name: 'menu'
        on_enter: app.audio.music('main_menu')


<MenuScreen>:
    canvas:
        Rectangle:
            source: app.img.mainmenu_wallpaper
            size: root.size
            pos: self.pos

    FloatLayout:
        BoxLayout:
            size_hint: (.3, .3)
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_max_y: 57*4
            size_hint_max_x: 283

            orientation: 'vertical'
            Button:
                text: app.text.new_game
            Button:
                text: app.text.load_game
            Button:
                text: app.text.main_settings
                on_release:
                    app.open_settings()
            Button:
                text: app.text.main_menu_quit
                on_release: root.on_quit_button()
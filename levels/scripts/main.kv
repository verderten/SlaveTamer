#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MainMenuScreen>:
    transition: FadeTransition()
    MenuScreen:
        name: 'menu'
        on_enter: app.audio.music('main_menu')
    SettingsScreen:
        name: 'settings'

<Button>:
    background_normal: app.img.button_normal
    background_down: app.img.button_down
    background_disabled_normal: app.img.button_disabled
    background_disabled_down: app.img.button_disabled

<MenuScreen>:
    canvas:
        Rectangle:
            source: app.img.mainmenu_wallpaper
            size: root.size
            pos: self.pos

    FloatLayout:
        BoxLayout:
            size_hint: (.3, .3)
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_max_y: 57*4
            size_hint_max_x: 283

            orientation: 'vertical'
            Button:
                text: app.text.new_game
                on_press: root.manager.current = 'settings'


            Button:
                text: app.text.load_game
            Button:
                text: app.text.main_settings
            Button:
                text: app.text.main_menu_quit
                on_press: root.on_quit_button()

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'